@model IEnumerable<MediaViewModel>
@{
    var firstVideo = Model.FirstOrDefault();
    string embedUrl = null;
    if (firstVideo != null && firstVideo.MediaUrl.Contains("youtube.com/watch?v="))
    {
        var videoId = firstVideo.MediaUrl.Split("v=")[1];
        embedUrl = $"https://www.youtube.com/embed/{videoId}?autoplay=1&mute=1&fullscreen=1";
    }
    else if (firstVideo != null)
    {
        embedUrl = firstVideo.MediaUrl;
    }
}
<div>
    @if (embedUrl != null)
    {
        <iframe width="320" height="240" src="@embedUrl" frameborder="0"  allow="autoplay; encrypted-media" allowfullscreen></iframe>
    }
</div>
